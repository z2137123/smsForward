<view class="container">

  <view class="doc-title">新增短信</view>

  <view class="zan-form">
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">发送人</text>
      <input
        class="zan-form__input zan-cell__bd"
        placeholder="手机" bindblur="bindsendBy"
      />
    </view>

    
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">发送内容</text>
      <textarea class="zan-form__textarea zan-cell__bd" bindblur="bindsendContext"  />
    </view>
    <view class="zan-panel-index" >
      <view class="zan-btns">
      <button  bindtap="submitSMS" class="zan-btn zan-btn--primary">提交</button>
      </view>
    </view>


    </view>
</view>
